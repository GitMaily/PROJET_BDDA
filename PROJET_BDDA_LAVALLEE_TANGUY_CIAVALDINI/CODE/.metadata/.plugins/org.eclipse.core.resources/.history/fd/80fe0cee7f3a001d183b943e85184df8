import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.RandomAccessFile;

public class DiskManager {

	private RandomAccessFile pages;


	public PageId allocPage() {
		PageId pi = new PageId();
		try {
			pages = new RandomAccessFile("/users/licence/il01193/Bureau/PROJET_BDDA/PROJET_BDDA_LAVALLEE_TANGUY_CIAVALDINI/DB/test.txt","rw");
		} catch (FileNotFoundException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		raf.writeUTF("Hello World");

        // set the file pointer at 0 position
        raf.seek(0);

        // read and print the contents of the file
        System.out.println("" + raf.readUTF());

        // print the length of the file
        System.out.println("" + raf.length());
		
		if(DBParams.maxPagesPerFile < pi.PageIdx) {
			//Ajouter une page
			//pageSize en octets
			try {
				System.out.println(pages.length());
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		System.out.println("On va procéder à la création d'une pageId");
		return null;
	}
}
